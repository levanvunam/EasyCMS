@model EzCMS.Core.Models.PollAnswers.PollAnswerManageModel

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.Total)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.AnswerText, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.AnswerText, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.AnswerText, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.AnswerText)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.PollId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.PollId, Model.PollQuestions, T("PollAnswer_Text_SelectPollQuestion"), new { @class = "single-select col-xs-10" })
        @Html.HelpTextFor(m => m.PollId, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.PollId)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.RecordOrder, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.RecordOrder, new { @class = "input-number" })
        @Html.HelpTextFor(m => m.RecordOrder, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.RecordOrder)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>