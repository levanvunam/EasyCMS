@model EzCMS.Core.Models.ProtectedDocuments.DocumentFeedbackModel

@Html.HiddenFor(m => m.EncryptedPath)
@Html.HiddenFor(m => m.RelativePath)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Comment, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Comment, new { @class = "col-xs-10", rows = 5 })
        @Html.HelpTextFor(m => m.Comment, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Comment)
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Security Code</label>
    <div class="col-sm-10">
        @Html.GenerateCaptcha()
        @Html.ValidationMessage("Captcha")
    </div>
</div>
<div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
        <button class="btn btn-primary" type="submit" onclick="parent.$dirty = true;" value="@SubmitType.PopupSave" name="Submit">
            <i class="fa fa-check bigger-110"></i>
            @T("ProtectedDocument_Text_SubmitButton")
        </button>
        <button class="btn" onclick="parent.$.fancybox.close();">
            <i class="fa fa-times bigger-110"></i>
            @T("ProtectedDocument_Text_CancelButton")
        </button>
    </div>
</div>