@using Ez.Framework.Configurations
@using EzCMS.Core.Framework.Configuration
@model EzCMS.Core.Models.Testimonials.TestimonialManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <img id="preview-selected-image" src="@Model.AuthorImageUrl" class="img-responsive" />
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.AuthorImageUrl, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.MediaBrowserFor(m => m.AuthorImageUrl, MediaEnums.MediaBrowserSelectMode.ComplexImageUpload, new { @class = "col-xs-9" }, FrameworkConstants.MediaPath, EzCMSContants.MediaTestimonialPath)
        @Html.HelpTextFor(m => m.AuthorImageUrl, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Author)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Author, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Author, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Author, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Author)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.AuthorDescription, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.AuthorDescription, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.AuthorDescription, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.AuthorDescription)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Content, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Content, new { @class = "col-xs-10", rows = "7" })
        @Html.HelpTextFor(m => m.Content, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Content)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>

@{
    Script.Block(@<script type="text/javascript">
        function selectMedia(mediaUrl) {
            $("#preview-selected-image").attr("src", mediaUrl);
        }
    </script>);
}