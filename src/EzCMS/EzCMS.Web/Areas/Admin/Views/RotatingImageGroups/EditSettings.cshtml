@model EzCMS.Core.Models.RotatingImageGroups.GroupManageSettingModel

@{
    ViewBag.Header = T("RotatingImageGroup_Site_Header");
    ViewBag.Title = T("RotatingImageGroup_Site_EditSettingTitle");
    ViewBag.Description = T("RotatingImageGroup_Site_EditSettingDescription");
}

<div class="page-header">
    <h1>@ViewBag.Header
        <small>
