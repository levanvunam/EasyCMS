@model EzCMS.Core.Models.PageTemplates.PageTemplateManageModel

@{
    Layout = "~/Views/Shared/_Layout.Blank.cshtml";
    ViewBag.Header = T("PageTemplate_Site_Header");
    ViewBag.Title = T("PageTemplate_Site_EditTitle");
    ViewBag.Description = T("PageTemplate_Site_EditDescription");
}

@section styles{
    @Styles.Render("~/styles/codemirror")
}

<div class="page-header">
    <h1>
        @ViewBag.Header
        <small>
            <i class="fa fa-angle-double-right"></i>
            @ViewBag.Title
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("PopupEdit", "PageTemplates", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.EditorForModel(Model)
        }
    </div>
</div>