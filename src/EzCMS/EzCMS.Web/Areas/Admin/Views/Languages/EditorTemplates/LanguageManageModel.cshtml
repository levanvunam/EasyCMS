@model EzCMS.Core.Models.Languages.LanguageManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Name, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Culture, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.Culture, Model.Countries, new { @class = "col-xs-10 single-select" })
        @Html.HelpTextFor(m => m.Culture, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Culture)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Key, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Key, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Key, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Key)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>