@model EzCMS.Core.Models.SocialMedia.SocialMediaManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Name, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-10", @readonly = "readonly" })
        @Html.HelpTextFor(m => m.Name, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.MaxCharacter, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.MaxCharacter, new { @class = "input-number" })
        @Html.HelpTextFor(m => m.MaxCharacter, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.MaxCharacter)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.RecordOrder, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.RecordOrder, new { @class = "input-number" })
        @Html.HelpTextFor(m => m.RecordOrder, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.RecordOrder)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", true)
</div>