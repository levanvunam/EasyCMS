@model EzCMS.Core.Models.Contacts.ContactDetailModel

@if (Model == null)
{
    <span> @T("Contact_Text_ContactDetailsNoContact") </span>
}
else
{
    <div class="col-xs-12">
        <div class="space-12"></div>
        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Contact.Address)</div>
                <div class="col-sm-7 control-value">@Model.Contact.AddressLine1</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5"></div>
                <div class="col-sm-7 control-value">@Model.Contact.AddressLine2</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5"></div>
                <div class="col-sm-7 control-value">@Model.FullAddress</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Contact.PostalAddress)</div>
                <div class="col-sm-7 control-value">@Model.Contact.PostalAddressLine1</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5"></div>
                <div class="col-sm-7 control-value">@Model.Contact.PostalAddressLine2</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5"></div>
                <div class="col-sm-7 control-value">@Model.FullPostalAddress</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Groups)</div>
                <div class="col-sm-7 control-value">@Model.Groups</div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Contact.Facebook)</div>
                @if (!string.IsNullOrEmpty(Model.Contact.Facebook))
                {
                    <div class="col-sm-7 control-value"><a target="_blank" href="@Model.Contact.Facebook">@T("Contact_Text_ContactDetailsFacebookLink")</a> </div>
                }
                else
                {
                    <div class="col-sm-7 control-value"> @T("Contact_Text_ContactDetailsFacebookLinkNotAvailable") </div>
                }
            </div>
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Contact.Twitter)</div>
                @if (!string.IsNullOrEmpty(Model.Contact.Twitter))
                {
                    <div class="col-sm-7 control-value"><a target="_blank" href="@Model.Contact.Twitter">@T("Contact_Text_ContactDetailsTwitterLink")</a></div>
                }
                else
                {
                    <div class="col-sm-7 control-value"> @T("Contact_Text_ContactDetailsTwitterLinkNotAvailable") </div>
                }
            </div>
            <div class="form-group">
                <div class="col-sm-5">@Html.LocalizeLabelFor(m => m.Contact.LinkedIn)</div>
                @if (!string.IsNullOrEmpty(Model.Contact.LinkedIn))
                {
                    <div class="col-sm-7 control-value"><a target="_blank" href="@Model.Contact.LinkedIn">@T("Contact_Text_ContactDetailsLinkedInLink")</a></div>
                }
                else
                {
                    <div class="col-sm-7 control-value"> @T("Contact_Text_ContactDetailsLinkedInLinkNotAvailable") </div>
                }
            </div>
        </div>

        <div class="col-sm-5">
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelFor(m => m.Contact.Occupation)
                </div>
                <div class="col-sm-7 control-value">
                    @Model.Contact.Occupation
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelFor(m => m.Contact.Sex)
                </div>
                <div class="col-sm-7 control-value">
                    @Model.Contact.Sex
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelFor(m => m.Contact.DateOfBirth)
                </div>
                <div class="col-sm-7 control-value">
                    @if (Model.Contact.DateOfBirth != null)
                    {
                        @Model.Contact.DateOfBirth.Value.ToShortDateString()
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelTimeFor(m => m.LastUpdate)
                </div>
                <div class="col-sm-7 control-value">
                    @Html.DisplayTimeFor(m => m.LastUpdate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelFor(m => m.LastUpdateBy)
                </div>
                <div class="col-sm-7 control-value">
                    @Model.LastUpdateBy
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LocalizeLabelFor(m => m.Id)
                </div>
                <div class="col-sm-7 control-value">
                    @Model.Id  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("Details", new { id = Model.Contact.Id})"><i class="fa fa-search-plus"></i> @T("Contact_Text_ContactDetailsMoreDetail")</a>
                </div>
            </div>
        </div>
    </div>
}