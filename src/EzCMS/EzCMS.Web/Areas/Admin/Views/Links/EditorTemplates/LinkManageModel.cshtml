@model EzCMS.Core.Models.Links.LinkManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Name, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Url, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Url, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Url, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Url)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.UrlTarget, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.UrlTarget, Model.UrlTargets, new { @class = "single-select-no-search col-xs-10" })
        @Html.HelpTextFor(m => m.UrlTarget, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.UrlTarget)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Description, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Description, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.LinkTypeId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.LinkTypeId, Model.LinkTypes, T("Link_Text_SelectLinkType"), new { @class = "single-select col-xs-10" })
        @Html.HelpTextFor(m => m.LinkTypeId, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.LinkTypeId)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelTimeFor(m => m.DateStart, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10 col-xs-12 no-padding">
        <div class="input-group col-sm-3">
            @Html.TextBoxFor(m => m.DateStart, new { @Value = ToLocalDateTime(Model.DateStart).ToDateFormat(), @class = "form-control col-xs-12 datetime-picker" })
            <label class="input-group-addon" for="DateStart">
                <i class="fa fa-calendar bigger-110"></i>
            </label>
        </div>
        @Html.HelpTextFor(m => m.DateStart, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.DateStart)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelTimeFor(m => m.DateEnd, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10 col-xs-12 no-padding">
        <div class="input-group col-sm-3">
            @Html.TextBoxFor(m => m.DateEnd, new { @Value = ToLocalDateTime(Model.DateEnd).ToDateFormat(), @class = "form-control col-xs-12 datetime-picker" })
            <label class="input-group-addon" for="DateEnd">
                <i class="fa fa-calendar bigger-110"></i>
            </label>
        </div>
        @Html.HelpTextFor(m => m.DateEnd, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.DateEnd)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>