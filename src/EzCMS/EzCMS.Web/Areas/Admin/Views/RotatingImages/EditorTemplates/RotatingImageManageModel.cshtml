@using Ez.Framework.Configurations
@using EzCMS.Core.Framework.Configuration
@model EzCMS.Core.Models.RotatingImages.RotatingImageManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <img id="preview-selected-image" src="@Model.ImageUrl" class="img-responsive" />
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.ImageUrl, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.MediaBrowserFor(m => m.ImageUrl, MediaEnums.MediaBrowserSelectMode.ComplexImageUpload, new { @class = "col-xs-9" }, FrameworkConstants.MediaPath, EzCMSContants.MediaRotatingImagesPath)
        @Html.HelpTextFor(m => m.ImageUrl, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.ImageUrl)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.GroupId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.GroupId, Model.Groups, new { @class = "single-select col-xs-10" })
        @Html.HelpTextFor(m => m.GroupId, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.GroupId)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Title, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Title, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Text, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Text, new { @class = "col-xs-10", rows = 4 })
        @Html.HelpTextFor(m => m.Text, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Text)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Url, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Url, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Url, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Url)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.UrlTarget, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.UrlTarget, Model.UrlTargets, new { @class = "single-select-no-search col-xs-10" })
        @Html.HelpTextFor(m => m.UrlTarget, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.UrlTarget)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>

@{
    Script.Block(@<script type="text/javascript">
        function selectMedia(mediaUrl) {
            $("#preview-selected-image").attr("src", mediaUrl);
        }
    </script>);
}