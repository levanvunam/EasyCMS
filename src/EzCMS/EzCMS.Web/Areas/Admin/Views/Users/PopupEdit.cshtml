@model EzCMS.Core.Models.Users.SimpleUserManageModel

@{
    Layout = "~/Views/Shared/_Layout.Blank.cshtml";
    ViewBag.Header = T("User_Site_Header");
    ViewBag.Title = TFormat("User_Site_EditTitle", Model.FullName);
    ViewBag.Description = TFormat("User_Site_EditDescription", Model.FullName);
}

<div class="page-header">
    <h1>@ViewBag.Header
        <small>
            <i class="fa fa-angle-double-right"></i>
            @ViewBag.Title
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("PopupEdit", "Users", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.EditorForModel(Model)
        }
    </div>
</div>