@model EzCMS.Core.Models.SiteSetup.CompanySetupModel

<div class="col-xs-12">
    <h1>Setup Company</h1>
</div>
<div class="col-xs-12">
    @using (Ajax.BeginForm("CompanySetup", "Setup", null, new AjaxOptions
{
    OnBegin = "siteHelper.showLoading",
    OnSuccess = "CompanySetupSuccess",
    OnComplete = "siteHelper.hideLoading"
}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.SiteTitle, "Site Title", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SiteTitle, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.SiteTitle)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Keywords, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Keywords, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Keywords)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DealerLicense, "Dealer License", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.DealerLicense, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.DealerLicense)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CompanyName, "Company Name", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.CompanyName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AddressLine1, "Address Line 1", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.AddressLine1, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.AddressLine1)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AddressLine2, "Address Line 2", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.AddressLine2, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.AddressLine2)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Suburb, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Suburb, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Suburb)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.State, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.State, Model.States, new { @class = "col-sm-6 single-select" })
                @Html.ValidationMessageFor(m => m.State)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Postcode, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Postcode, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Postcode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Country, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Country, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Country)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone1, "Phone 1", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone1, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Phone1)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone2, "Phone 2", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone2, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Phone2)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone3, "Phone 3", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone3, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Phone3)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email1, "Email 1", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email1, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Email1)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email2, "Email 2", new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email2, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Email2)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Website, new { @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Website, new { @class = "col-sm-6" })
                @Html.ValidationMessageFor(m => m.Website)
            </div>
        </div>
        <div class="clearfix form-actions">
            <input id="btnSkip" onclick="skip()" class="btn" type="button" value="Skip this" />
            <input class="btn btn-info" type="submit" value="Save" />
        </div>
    }
</div>
<script type="text/javascript">
    function skip() {
        $('#siteSetup').easyWizard('nextStep');
    }
    function CompanySetupSuccess(response) {
        if (response.Success) {
            $('#siteSetup').easyWizard('nextStep');
        } else {
            siteHelper.alert(response.Message);
        }
    }
</script>
