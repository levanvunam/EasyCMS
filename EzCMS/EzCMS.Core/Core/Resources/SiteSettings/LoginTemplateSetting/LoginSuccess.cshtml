<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <i class="fa fa-lock blue"></i>
                            <span class="red">Login</span>
                            <span class="light-blue">Page</span>
                        </h1>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        @ShowStatusMessage()
                        <div class="space-32"></div>
                        <div class="col-xs-12 center">
                            <div class="col-xs-12">
                                <a href="javascript:goToSite()" target="_top">
                                    @if (CurrentUser.IsSystemAdministrator)
                                    {
                                        <text>MANAGE YOUR WEBSITE</text>
                                    }
                                    else
                                    {
                                        <text>GO TO WEBSITE</text>
                                    }
                                </a><br>
                            </div>
                            @if (CurrentUser.IsSystemAdministrator)
                            {
                                <div class="space-20"></div>
                                <div class="col-xs-12">
                                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })" target="_blank">LAUNCH THE ADMIN MODULE </a>
                                    <br>
                                    <small>(advanced users only)</small><br>
                                </div>
                            }
                            <div class="space-32"></div>
                            <div class="col-xs-12">
                                <a target="_top" href="javascript:void(0)" onclick=" Logout();">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    
    function goToSite() {
        if (parent && parent.jQuery().fancybox) {
            parent.$.fancybox.close();
            if (parent.window.location.href.indexOf("@Url.Action("LoginSuccess")") >= 0) {
                window.location.href = "/";
            } else {
                parent.window.location.reload();
            }
        } else {
            window.location.href = "/";
        }
    }

    function Logout() {
        if (parent && parent.jQuery().fancybox) {
            parent.$.fancybox.close();
        }
        siteHelper.logout('/');
    }
</script>