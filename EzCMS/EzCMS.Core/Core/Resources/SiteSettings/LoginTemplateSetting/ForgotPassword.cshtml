<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <i class="fa fa-lock blue"></i>
                            <span class="red">Login</span>
                            <span class="light-blue">Page</span>
                        </h1>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        @ShowStatusMessage()
                        <div id="forgot-box" class="forgot-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header red lighter bigger">
                                        <i class="fa fa-key"></i>
                                        Retrieve Password
                                    </h4>

                                    <div class="space-6"></div>
                                    <p>
                                        Enter your username to receive instructions
                                    </p>
                                    <fieldset>
                                        <label class="block clearfix">
                                            <span class="block input-icon input-icon-right">
                                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                                <i class="ace-icon fa fa-envelope"></i>
                                            </span>
                                            @Html.ValidationMessageFor(m => m.Username)
                                        </label>

                                        <div class="clearfix">
                                            <button type="submit" class="width-35 pull-right btn btn-sm btn-danger">
                                                <i class="fa fa-lightbulb-o"></i>
                                                Send Me!
                                            </button>
                                        </div>
                                    </fieldset>
                                </div>

                                <div class="toolbar center">
                                    <a href="@Url.Action("Login")" class="back-to-login-link">
                                        Back to login
                                        <i class="fa fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function OnForgotPasswordSuccess(response) {
        if (response.Success) {
            location.href = "@Url.Action("ForgotPasswordSuccess")";
        }
        siteHelper.showMessage(response);
    }
</script>