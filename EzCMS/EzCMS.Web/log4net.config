<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="EzCMSLogger" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Logs\%utcdate{yyyy.MM.dd}.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <datePattern value="yyyy.MM.dd" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%utcdate %level - %message%newline" />
      </layout>
    </appender>
    <logger name="RollingFileAppender">
      <level value="ALL" />
      <maximumfilesize value="512KB" />
    </logger>
    <root>
      <level value="INFO" />
      <appender-ref ref="EzCMSLogger" />
    </root>
  </log4net>
</configuration>