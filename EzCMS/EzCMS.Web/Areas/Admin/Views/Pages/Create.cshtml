@model EzCMS.Core.Models.Pages.PageManageModel

@{
    ViewBag.Header = T("Page_Site_Header");
    ViewBag.Title = T("Page_Site_CreateTitle");
    ViewBag.Description = T("Page_Site_CreateDescription");
}

<div class="page-header">
    <h1>
        @ViewBag.Header
    <small>
        <i class="fa fa-angle-double-right"></i>
        @ViewBag.Title
    </small>
</h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("Create", "Pages", null, FormMethod.Post, new { @class = "form-horizontal", id = "pageForm", enctype = "multipart/form-data" }))
        {
            @Html.EditorForModel(Model)
        }
    </div>
</div>