@model EzCMS.Core.Models.Notices.NoticeManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Message, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Message, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Message, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Message)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.IsUrgent, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.AceCheckBoxFor(m => m.IsUrgent)
        @Html.HelpTextFor(m => m.IsUrgent, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.IsUrgent)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.NoticeTypeId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.NoticeTypeId, Model.NoticeTypes, T("Notice_Text_SelectNoticeType"), new { @class = "single-select col-xs-10" })
        @Html.HelpTextFor(m => m.NoticeTypeId, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.NoticeTypeId)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelTimeFor(m => m.DateStart, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10 col-xs-12 no-padding">
        <div class="input-group col-sm-3">
            @Html.TextBoxFor(m => m.DateStart, new { @Value = ToLocalDateTime(Model.DateStart).ToDateTimeFormat(), @class = "form-control col-xs-12 datetime-picker" })
            <label class="input-group-addon" for="DateStart">
                <i class="fa fa-calendar bigger-110"></i>
            </label>
        </div>
        @Html.HelpTextFor(m => m.DateStart, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.DateStart)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelTimeFor(m => m.DateEnd, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10 col-xs-12 no-padding">
        <div class="input-group col-sm-3">
            @Html.TextBoxFor(m => m.DateEnd, new { @Value = ToLocalDateTime(Model.DateEnd).ToDateTimeFormat(), @class = "form-control col-xs-12 datetime-picker" })
            <label class="input-group-addon" for="DateEnd">
                <i class="fa fa-calendar bigger-110"></i>
            </label>
        </div>
        @Html.HelpTextFor(m => m.DateEnd, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.DateEnd)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>