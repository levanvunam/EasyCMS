@model EzCMS.Core.Models.Polls.PollManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.PollQuestion, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.PollQuestion, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.PollQuestion, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.PollQuestion)
    </div>
</div>
<div class="form-group">
    <div class="col-sm-2">
        @Html.LocalizeLabelFor(m => m.PollSummary, new { @class = "col-sm-12 control-label" })
        <div class="clear space-4 visible-xs"></div>
    </div>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.PollSummary, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.PollSummary, new { @class = "help-button hidden-xs col-sm-1" })
        @Html.ValidationMessageFor(m => m.PollSummary)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.IsMultiple, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.AceCheckBoxFor(m => m.IsMultiple)
        @Html.HelpTextFor(m => m.IsMultiple, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.IsMultiple)
    </div>
</div>
<div class="form-group">
    <div class="col-sm-2">
        @Html.LocalizeLabelFor(m => m.ThankyouText, new { @class = "col-sm-12 control-label" })
        <div class="clear space-4 visible-xs"></div>
    </div>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.ThankyouText, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.ThankyouText, new { @class = "help-button hidden-xs col-sm-1" })
        @Html.ValidationMessageFor(m => m.ThankyouText)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>

@{
    Script.Bundle("~/js/ckeditor").Block(@<script type="text/javascript">
        buildCkEditor('PollSummary', {
            toolbar: $.parseJSON('@Html.Action("BasicToolbar", "Home")')
        });

        buildCkEditor('ThankyouText', {
            toolbar: $.parseJSON('@Html.Action("BasicToolbar", "Home")')
        });
    </script>);
}
