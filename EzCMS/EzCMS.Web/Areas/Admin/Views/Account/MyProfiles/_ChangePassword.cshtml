@model EzCMS.Core.Models.Users.ChangePasswordModel

@using (Ajax.BeginForm("ChangePassword", new AjaxOptions
                        {
                            LoadingElementId = "loading-wrapper",
                            OnSuccess = "OnChangePasswordSuccess"
                        }))
{
    <div class="form-horizontal">

        @Html.HiddenFor(m => m.UserId)
        <div class="space-10"></div>
        <div class="form-group">
            @Html.LocalizeLabelFor(m => m.OldPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "col-sm-6" })
                @Html.HelpTextFor(m => m.OldPassword, new { @class = "help-button" })
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LocalizeLabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.Password, new { @class = "col-sm-6" })
                @Html.HelpTextFor(m => m.Password, new { @class = "help-button" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LocalizeLabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-sm-6" })
                @Html.HelpTextFor(m => m.ConfirmPassword, new { @class = "help-button" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="clearfix">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-check bigger-110"></i>
                    @T("Account_Text_ChangepasswordSaveButton")
                </button>
            </div>
        </div>
    </div>
}

@{
    Script.Block(@<script type="text/javascript">
        function OnChangePasswordSuccess(response) {
            siteHelper.showMessage(response);
        }
    </script>);
}