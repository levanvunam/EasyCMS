@model EzCMS.Core.Models.Users.Logins.LoginSetupModel

@{
    Layout = "~/Areas/Admin/Views/Account/_Layout.Account.cshtml";
    ViewBag.Header = T("Account_Site_Header");
    ViewBag.Title = T("Account_Site_ForgotPasswordSuccessTitle");
    ViewBag.Description = T("Account_Site_ForgotPasswordSuccessDescription");
}

@if (!Model.EnableTemplate)
{
    <div id="forgot-success-box" class="forgot-box visible widget-box no-border">
        <div class="widget-body">
            <div class="widget-main">
                <h4 class="header red lighter bigger">
                    <i class="fa fa-key"></i>
                    @T("Account_Text_ForgotPasswordRetrievePassword")
                </h4>

                <div class="space-6"></div>
                <p>
                    @T("Account_Text_ForgotPasswordSuccessSentInstructionsToEmail")
                </p>
            </div>

            <div class="toolbar center">
                <a href="@Url.Action("Login")" class="back-to-login-link">
                    @T("Account_Text_ForgotPasswordSuccessBackToLogin")
                    <i class="fa fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
}
else
{
    @RenderTemplate(Model.TemplateName, Model.Template, Model)
}
