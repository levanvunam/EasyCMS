@model EzCMS.Core.Models.FormComponentTemplates.FormComponentTemplateManageModel

@{
    ViewBag.Header = T("FormComponentTemplate_Site_Header");
    ViewBag.Title = T("FormComponentTemplate_Site_CreateTitle");
    ViewBag.Description = T("FormComponentTemplate_Site_CreateDescription");
}

@section styles{
    @Styles.Render("~/styles/codemirror")
}

<div class="page-header">
    <h1>
        @ViewBag.Header
    <small>
        <i class="fa fa-angle-double-right"></i>
        @ViewBag.Title
    </small>
</h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("Create", "FormComponentTemplates", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.EditorForModel(Model)
        }
    </div>
</div>