@model EzCMS.Core.Models.FormComponents.FormComponentSearchModel

<div class="widget-box">
    <div class="widget-header">
        <h5>@T("FormComponent_Search_Header")</h5>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="form-group col-sm-4">
                @Html.DropDownListFor(m => m.FormTabId, Model.FormTabs, T("FormComponent_Search_AllTabs"), new { id = "FormTabId", @class = "col-xs-10 single-select" })
                @Html.HelpTextFor(m => m.FormTabId, new { @class = "help-button" })
            </div>
            <div class="form-group col-sm-4">
                @Html.DropDownListFor(m => m.FormComponentTemplateId, Model.FormComponentTemplates, T("FormComponent_Search_AllTemplates"), new { id = "FormComponentTemplateId", @class = "col-xs-10 single-select" })
                @Html.HelpTextFor(m => m.FormComponentTemplateId, new { @class = "help-button" })
            </div>
            <div class="form-group col-sm-3">
                <button id="btnSearch" class="btn btn-sm btn-info">@T("System_Search_Button")</button>
                <button id="btnClearSearch" class="btn btn-sm btn-default">@T("System_Search_ClearButton")</button>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
