@model EzCMS.Core.Models.LocalizedResources.LocalizedResourceManageModel

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.LanguageId)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.TextKey, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10 col-xs-12">
        @Html.TextBoxFor(m => m.TextKey, new { @class = "col-sm-8 col-xs-10" })
        @Html.HelpTextFor(m => m.TextKey, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.TextKey)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.DefaultValue, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10 col-xs-12">
        @Html.TextAreaFor(m => m.DefaultValue, new { @class = "col-sm-8 col-xs-10", rows = 3 })
        @Html.HelpTextFor(m => m.DefaultValue, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.DefaultValue)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.TranslatedValue, new { @class = "col-sm-2 control-label align-right" })
    <div class="col-sm-10 col-xs-12">
        @Html.TextAreaFor(m => m.TranslatedValue, new { @class = "col-sm-8 col-xs-10", rows = 3 })
        @Html.HelpTextFor(m => m.TranslatedValue, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.TranslatedValue)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>