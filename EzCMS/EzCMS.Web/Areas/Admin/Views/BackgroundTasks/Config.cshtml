@model EzCMS.Core.Models.BackgroundTasks.BackgroundTaskManageModel

@{
    ViewBag.Header = T("BackgroundTask_Site_Header");
    ViewBag.Title = TFormat("BackgroundTask_Site_ConfigTitle", Model.Name);
    ViewBag.Description = T("BackgroundTask_Site_ConfigDescription");
}

<div class="page-header">
    <h1>
        @ViewBag.Header
        <small>
            <i class="fa fa-angle-double-right"></i>
            @ViewBag.Title
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("Config", "BackgroundTasks", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.EditorForModel(Model)
        }
    </div>
</div>