@model EzCMS.Core.Models.FormComponentFields.FormComponentFieldManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Name, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.FormComponentId, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.FormComponentId, Model.FormComponents, new { @class = "col-xs-10 single-select" })
        @Html.HelpTextFor(m => m.FormComponentId, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.FormComponentId)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Attributes.label, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Attributes.label, new { @class = "col-xs-10" })
        @Html.HelpTextFor(m => m.Attributes.label, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Attributes.label)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Attributes.type, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.Attributes.type, Model.Attributes.Types, new { @class = "col-xs-10 single-select" })
        @Html.HelpTextFor(m => m.Attributes.type, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Attributes.type)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.Attributes.ValueString, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Attributes.ValueString, new { @class = "col-xs-10", rows = 3 })
        @Html.HelpTextFor(m => m.Attributes.ValueString, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.Attributes.ValueString)
    </div>
</div>
<div class="form-group">
    @Html.LocalizeLabelFor(m => m.RecordOrder, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.RecordOrder, new { @class = "input-number" })
        @Html.HelpTextFor(m => m.RecordOrder, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.RecordOrder)
    </div>
</div>
<div class="clearfix form-actions">
    @Html.Partial("Partials/_SubmitButtons", Model.Id.HasValue)
</div>
