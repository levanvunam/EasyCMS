@model PasswordSetting

<div class="form-group">
    @Html.LocalizeLabelFor(m => m.PasswordMinLengthRequired, new { @class = "col-md-4 control-label" })
    <div class="col-xs-5">
        @Html.TextBoxFor(m => m.PasswordMinLengthRequired, new { @class = "input-number" })
        @Html.HelpTextFor(m => m.PasswordMinLengthRequired, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.PasswordMinLengthRequired)
    </div>
</div>
