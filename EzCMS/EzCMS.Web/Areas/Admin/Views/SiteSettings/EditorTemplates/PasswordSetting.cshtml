    @Html.LocalizeLabelFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters, new { @class = "col-md-4 control-label" })
    <div class="col-md-5">
        @Html.AceCheckBoxFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters)
        @Html.HelpTextFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters)
    </div>
</div>