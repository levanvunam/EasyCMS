    @Html.LocalizeLabelFor(m => m.PasswordMustHaveDigit, new { @class = "col-md-4 control-label" })
    <div class="col-md-5">
        @Html.AceCheckBoxFor(m => m.PasswordMustHaveDigit)
        @Html.HelpTextFor(m => m.PasswordMustHaveDigit, new { @class = "help-button" })
        @Html.ValidationMessageFor(m => m.PasswordMustHaveDigit)
    </div>
</div>
