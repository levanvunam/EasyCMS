@model EzCMS.Core.Models.EmailLogs.ResendEmailModel

@{
    Layout = "~/Views/Shared/_Layout.Blank.cshtml";
    ViewBag.Header = T("EmailLog_Site_Header");
    ViewBag.Title = T("EmailLog_Site_ResendEmailTitle");
    ViewBag.Description = T("EmailLog_Site_ResendEmailDescription");
}

<div class="page-header">
    <h1>
        @ViewBag.Header
        <small>
            <i class="fa fa-angle-double-right"></i>
            @ViewBag.Title
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        @ShowStatusMessage()
        @using (Html.BeginForm("ResendEmail", "EmailLogs", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.EmailLogId)
            <div class="form-group">
                @Html.LocalizeLabelFor(m => m.Subject, new { @class = "col-sm-4 control-label align-right" })
                <div class="col-sm-8 col-xs-12 control-value">
                    @Model.Subject
                </div>
            </div>
            <div class="form-group">
                @Html.LocalizeLabelFor(m => m.EmailAccountId, new { @class = "col-sm-4 control-label align-right" })
                <div class="col-sm-8 col-xs-12">
                    @Html.DropDownListFor(m => m.EmailAccountId, Model.EmailAccounts, new { @class = "single-select-no-search col-xs-10" })
                    @Html.HelpTextFor(m => m.EmailAccountId, new { @class = "help-button" })
                    @Html.ValidationMessageFor(m => m.EmailAccountId)
                </div>
            </div>
            <div class="space-4 clear"></div>
            <div class="clearfix form-actions center">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit" name="Submit">
                        <i class="fa fa-check bigger-110"></i>
                        @T("EmailLog_Text_ResendEmailSendEmailButton")
                    </button>
                </div>
            </div>
        }
    </div>
</div>